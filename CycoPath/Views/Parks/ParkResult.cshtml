@model IEnumerable<CycoPath.Models.CycoPathModel>
@using Jmelosegui.Mvc.GoogleMap

@{ List<string>
                 Name = new List<string>();
    List<double> CoordinatesX = new List<double>();
    List<double> CoordinatesY = new List<double>();

}

@foreach (var item in Model)
{

    string name = item.ParkViewModel.Name;
    string coordinates = item.ParkViewModel.Coordinates;
    double cordX = double.Parse(coordinates.Substring(coordinates.LastIndexOf(',') + 1));
    double cordY = double.Parse(coordinates.Substring(0, coordinates.LastIndexOf(',')));

    Name.Add(name);
    CoordinatesX.Add(cordX);
    CoordinatesY.Add(cordY);
}

@section scripts
                            {
    @(Html.GoogleMap().ScriptRegistrar())
}

@(

                            Html.GoogleMap()
                            .Name("map")
                            .Height(400)
                            .Center(c => c.Latitude(1.3553794)
                            .Longitude(103.851959))
                            .Zoom(12)
                            .Markers(m => m.Add()
                            .Latitude(CoordinatesX.ElementAt(0))
                            .Longitude(CoordinatesY.ElementAt(0))
                            )
                            .Markers(n => n.Add()
                            .Latitude(CoordinatesX.ElementAt(1))
                            .Longitude(CoordinatesY.ElementAt(1))
                            )


)
<div class="container">
    <div class="row">
@using (Html.BeginForm("Index", "Carparks", FormMethod.Post))
{
    @Html.AntiForgeryToken()
        foreach (var item in Model)
        {
            <div class="col-md-4 portfolio-item">
                <div class="thumbnail">

                    <img class="img-responsive" src="http://placehold.it/700x400" alt="">

                    <h3>
                        <a>@Html.DisplayFor(modelItem => item.ParkViewModel.Name)</a>
                    </h3>
                    <p>Lorem ipsum dolor sit amet, consectetur adipiscing elit. Nam viverra euismod odio, gravida pellentesque urna varius vitae.</p>
                </div>
            </div>
        }
        <div class="col-md-4 portfolio-item">
            <div class="caption">
                <h3>Information</h3>
                <p>To set path as the path that are you going select the radio button bellow. By selecting the radio button, this path will be saved and can be used in "Track Me!" function.</p>
                <div class="thumbnail">
                    <div class="radio">
                        <label>
                            <input type="radio" name="optionsRadios" id="optionsRadios1" value="option1" checked>
                            Set as path!
                        </label>
                    </div>
                    <div class="radio">
                        <label>
                            <input type="radio" name="optionsRadios" id="optionsRadios2" value="option2">
                            Set as path and search carpark!
                        </label>
                    </div>
                </div>
                <button type="submit" class="btn btn-default">
                    Submit
                </button>
            </div>
        </div>
}
    </div>
</div>




